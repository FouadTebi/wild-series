<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>ðŸ’Ž</text></svg>">
        {# <link rel="icon" type="image/png" href="{{ asset('images/favicon-camera.png') }}"> #}
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body {{ stimulus_controller('theme') }} {{ stimulus_target('theme', 'body') }}>
    <header>
			{% include "_navbar.html.twig" %}
    </header>
        {% for category, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ category }} mt-4">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        {% block body %}
            <div class="container">{{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit">Add category</button>
            {{ form_end(form) }}
        {% endblock %}
    </body>
</html>
